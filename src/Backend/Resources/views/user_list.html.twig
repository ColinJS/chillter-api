{% extends "layout.html.twig" %}

{% set title = "Users" %}

{% block content %}
    <div class="row user-list">
        <div class="col-xs-12">
            <br />
            <h1 class="color-text">Users ({{ totalCount }})</h1>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>&nbsp;</th>
                    <th>Details</th>
                    <th class="text-center">Permissions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td style="vertical-align: middle">{{ user.id }}</td>
                        <td>
                            <a href="{{ user.picture }}">
                                <img src="{{ user.picture }}" />
                            </a>
                        </td>
                        <td class="vertical-middle">
                            <strong><a href="{{ path('backend_user_details', { 'userId': user.id }) }}">{{ user.firstname }} {{ user.lastname }}</a></strong><br/>
                            {{ user.email }}
                        </td>
                        <td class="vertical-middle">
                            {% if 'ROLE_ADMIN' in user.roles %}
                                <span class="label label-primary label-permission">admin</span>
                            {% else %}
                                <span class="label label-info label-permission">user</span>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}